<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:layoutDirection="ltr">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img_logo"
            android:background="@drawable/rounded_frame"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:clipToOutline="true" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/img_app_name"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />
    </LinearLayout>

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android Chart Library Demo"
            android:textSize="14sp"
            android:textColor="#64748B"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"/>

        <!-- Graph 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/frame_outline"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ˆ Line Chart"
                android:textStyle="bold"
                android:textColor="#1E3A8A"
                android:textSize="16sp" />

            <dev.noash.graphlitelib.GraphView
                android:id="@+id/GV_graph1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Graph 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/frame_outline"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“‰ Area Chart"
                android:textStyle="bold"
                android:textColor="#DC4F00"
                android:textSize="16sp" />

            <dev.noash.graphlitelib.GraphView
                android:id="@+id/GV_graph2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Graph 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/frame_outline"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“Š Bar Chart"
                android:textStyle="bold"
                android:textColor="#9333EA"
                android:textSize="16sp" />

            <dev.noash.graphlitelib.GraphView
                android:id="@+id/GV_graph3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
